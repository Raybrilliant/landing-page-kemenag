---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.tsx";
import { BlurFade } from "@/components/magicui/blur-fade";
import { Layanan } from "@/components/Layanan";
import { Laporan } from "@/components/Laporan";
import { Sambutan } from "@/components/Sambutan";
import { BeritaList } from "@/components/BeritaList";
---

<BaseLayout>
		<!-- Highlight Berita Terkini -->
		<div class="grid grid-cols-5 max-sm:grid-cols-1">
			<div class="col-span-1 bg-green-700 flex flex-col justify-end pl-20 pr-5 py-10 max-sm:hidden">
				<BlurFade delay={0.7} inView direction="left" client:load>
					<div class="text-white space-y-5">
						<p class="text-2xl font-bold">Highlight Berita Terkini</p>
						<p class="text-sm">Update Berita Seputar Kemenag Kota Probolinggo</p>
						<a href="/berita" class="bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-600/80 hover:px-7 duration-300 cursor-pointer">Lihat Semua</a>
					</div>
				</BlurFade>
			</div>
			<div class="col-span-4 md:mr-20 pb-10 pt-30 max-sm:pt-0">
				<BlurFade delay={0.25} inView client:load>
					<Hero client:load />
				</BlurFade>
				<!-- Berita -->
				 <BeritaList client:only="react"/>
			</div>
		</div>

		<h3 class="text-2xl font-bold mt-20 mb-10 mx-20 max-sm:mx-5 text-center max-sm:mt-10" id="layanan">Layanan PTSP</h3>
		<!-- Layanan -->
		<Layanan className="mx-20 max-sm:mx-5 mb-30 max-sm:my-5" client:only="react"/>
		<!-- Laporan -->
		<Laporan client:only="react"/>

		<!-- Kepala Kemenag -->
		<Sambutan client:only="react" />

		 <!-- Akses Cepat -->
		 <div class="bg-green-700 py-10 space-y-2" id="contact">
			<h1 class="text-center text-2xl max-sm:text-xl text-white font-semibold">Layanan Pengguna</h1>
			<p class="text-center text-white max-sm:text-sm">Terhubung dengan kami melalui jalur yang mudah dan cepat. Layanan tersedia pada hari kerja pukul 08.00 - 15.30 WIB.</p>
			<div class=" mx-20 max-sm:mx-5 grid grid-cols-2 max-sm:grid-cols-1 gap-5 mt-10 -mb-24">
				<a href="https://www.lapor.go.id/" target="_blank" class="bg-white p-10 rounded-md shadow-xl flex gap-5 items-center">
					<img src="/logo/lapor.png" width={60} height={60} alt="lapor">
					<div>
						<h2 class="text-xl font-bold">Lapor</h2>
						<p class="text-sm">Laporkan jika anda bertemu dengan pegawai kami yang tidak melaksanakan tugas sesuai SOP.</p>
					</div>
				</a>
				<a href="https://wa.me/6281359136007?text=Assalamualaikum%20Wr%20Wb%20Halo%20Kementerian%20Agama%20Kota%20Probolinggo" target="_blank" class="bg-white p-10 rounded-md shadow-xl flex gap-5 items-center">
					<img src="/logo/wa.webp" width={60} height={60} alt="wa">
					<div>
						<h2 class="text-xl font-bold">Pesan WhatsApp</h2>
						<p class="text-sm">Kirim pesan via WhatsApp untuk memudahkan masyarakat terhubung dengan Kementerian Agama Kota Probolinggo.</p>
					</div>
				</a>
			</div>
		 </div>
		 <!-- Zona Itegritas -->
		  <div class="mt-30 mx-20 max-sm:mx-5 md:h-96 max-xl:h-full overflow-hidden rounded-2xl">
			<img src="/logo/zona-integritas.webp" alt="zona-integritas" class="w-full h-full object-cover">
		  </div>
		 <!-- Footer -->
		 <Footer />

</BaseLayout> 

