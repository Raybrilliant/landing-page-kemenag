---
import Syarat from '@/components/Syarat'
import BaseLayout from '@/layouts/BaseLayout.astro'
const syarat = [
    {
        title: 'Syarat dan Ketentuan',
        content: 'Warga kota Probolinggo yang memiliki NIK dan Kartu Keluarga (KK) harus memiliki minimal umur 17 tahun.'
    },
    {
        title: 'Syarat dan Ketentuan',
        content: 'Warga kota Probolinggo yang memiliki NIK dan Kartu Keluarga (KK) harus memiliki minimal umur 17 tahun.'
    },
    {
        title: 'Syarat dan Ketentuan',
        content: 'Warga kota Probolinggo yang memiliki NIK dan Kartu Keluarga (KK) harus memiliki minimal umur 17 tahun.'
    },

    
]
const { id } = Astro.params 
---

<BaseLayout title={`Submit Layanan ${id}`}>
  <div class="mx-20 max-sm:mx-5 mt-30 space-y-2">
    <h1 class="text-3xl font-bold capitalize max-sm:text-2xl">Submit Layanan {id}</h1>
    <p class="opacity-70">Silahkan submit layanan yang anda perlukan</p>

    <div class="grid grid-cols-2 max-sm:grid-cols-1 gap-20 max-sm:gap-10 mt-10">
        <Syarat syarat={syarat} client:visible />
        <form action="/submit" enctype="multipart/form-data" class="space-y-3" method="POST">
            <div class="flex flex-col gap-1">
                <label for="nama" class="font-semibold">Nama Lengkap</label>
                <input type="text" id="nama" name="nama" placeholder="Fulan bin Fulan" class="w-full p-3 border border-gray-300 rounded-md bg-white" />
            </div>
            <div class="flex flex-col gap-1">
                <label for="email" class="font-semibold">Email Aktif</label>
                <input type="email" id="email" name="email" placeholder="fulan@mail.com" class="w-full p-3 border border-gray-300 rounded-md bg-white" />
            </div>
            <button type="submit" class="w-full p-3 bg-green-500 text-white rounded-md mt-5">Kirim</button>
        </form> 
    </div>
  </div>

</BaseLayout>
