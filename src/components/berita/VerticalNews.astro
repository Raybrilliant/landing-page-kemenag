---
const {title, category, image, description, slug} = Astro.props
---

 <a href={`/berita/blog/${slug}`} class="grid grid-cols-2 gap-2 items-center overflow-hidden">
    <img src={image} class="w-full h-48 object-cover rounded-xl" alt="gambar">
    <div class="flex flex-col gap-3">
        <div class="bg-amber-600 text-white rounded-full py-1 px-3 text-xs w-fit">{category}</div>
        <h1 class="font-medium max-sm:text-sm">{title}</h1>
        <p class="opacity-50 text-sm text-justify max-sm:text-sm">{description ? description.trim().slice(0, 90) + '...' : ''} <span class="font-medium">Selengkapnya</span></p>
    </div>
</a>