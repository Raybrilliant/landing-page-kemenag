---
import pb from '@/lib/database'
import VerticalNews from './VerticalNews.astro'
const {data} = Astro.props
const right = data.slice(1, 4)
const left = data.slice(0, 1)
---

<section class="grid grid-cols-5 max-sm:grid-cols-1 gap-5">
    <div class="col-span-3">
        <div class="relative rounded-xl h-[600px] overflow-hidden group hover:shadow-2xl duration-300">
            <a href={`/berita/blog/${data[0].slug}`}>
            <img src={pb.files.getURL(left[0], left[0].document)} class="w-full h-full object-cover absolute -z-10" alt="gambar">
            <div class="p-10 max-sm:p-5 flex flex-col h-full justify-end gap-3">
                <div class="bg-amber-600 text-white rounded-full py-1 px-3 w-fit max-sm:text-sm">{data[0].expand?.category?.name}</div>
                <h1 class="text-white text-3xl font-medium max-sm:text-xl">{data[0].title}</h1>
            </div>
            <div class="bg-gradient-to-t from-black to-transparent h-1/2 absolute bottom-0 w-full -z-5 group-hover:h-full transition-all duration-300"/>
            </a>
        </div>
    </div>
    <div class="col-span-2">
        <div class="flex flex-col justify-between gap-5">
            {right.map((item: any) => (
                <VerticalNews title={item.title} category={item.expand?.category?.name} image={pb.files.getURL(item, item.document)} description={item.content} slug={item.slug} />
            ))}
        </div>
    </div>
</section>