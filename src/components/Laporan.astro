---
import { EyeIcon, DownloadIcon, ArrowRightSquare, FileText } from "lucide-react";
import { BlurFade } from "./magicui/blur-fade";
const {data} = Astro.props;
---

        <div class="bg-green-700 px-20 py-20">
            <div class="flex justify-between gap-10 items-center text-white">
                <h2 class="text-2xl font-semibold">
                    Transparansi Informasi Kementerian Agama Kota Probolinggo
                </h2>
                <p>
                    Menyajikan publikasi dokumen resmi yang transpran, akurat, dan dapat dipertanggungjawabkan kepada masyarakat dan pemangku kepentingan lainnya.
                </p>
                <a href="/informasi" class="w-1/3">
                <button class="bg-green-500 hover:bg-green-600 text-white px-4 py-3 group rounded-md w-full cursor-pointer">
                    Lihat Semua Informasi <ArrowRightSquare className="w-4 h-4 ml-1 inline-block group-hover:translate-x-1 transition duration-300" />
                </button>
                </a>
            </div>
            <div class="grid grid-cols-3 gap-8 mt-10">
                {data.map((item:any, index:number) => (
                    <BlurFade inView delay={0.2 * index} direction="left" client:visible>
                    <div class="bg-white p-5 rounded-md">
                        <div class=" flex items-center gap-4 mb-5">
                            <div class="bg-red-200 min-w-13 min-h-13 rounded-md flex justify-center items-center">
                                <FileText className="text-red-500"/>
                            </div>
                            <h3 class="text-lg font-semibold">{item.title}</h3>
                        </div>
                        <p class="text-sm">{item.description}</p>
                    <div class="flex text-sm justify-between mt-5">
                        <a href="/laporan" class=" text-blue-500 group hover:underline flex items-center"><EyeIcon className="w-4 h-4 mr-2 group-hover:scale-120 transition duration-300" /> Lihat Dokumen</a>
                        <a href="/laporan" class=" text-blue-500 group hover:underline flex items-center"><DownloadIcon className="w-4 h-4 mr-2 group-hover:scale-120 transition duration-300" /> Unduh Dokumen</a>
                    </div>
                </div>
                </BlurFade>
                ))}
            </div>
        </div>